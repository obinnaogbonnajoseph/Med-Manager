<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context="com.example.android.med_manager.LoginActivity">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="202dp"
        android:layout_height="158dp"
        android:layout_marginStart="91dp"
        android:layout_marginTop="123dp"
        android:contentDescription="@string/app_logo"
        android:src="@drawable/logo_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="86dp"
        android:background="@drawable/round_bg"
        android:contentDescription="@string/sign_in_button"
        android:paddingEnd="24dp"
        android:src="@drawable/sign_up_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_logo" />

    <TextView
        android:id="@+id/account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/already_have_an_account"
        android:textAlignment="textStart"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/sign_up"
        app:layout_constraintTop_toBottomOf="@+id/sign_up"
        tools:layout_editor_absoluteX="107dp"
        tools:text="Already have an account?" />

    <TextView
        android:id="@+id/signIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:clickable="true"
        android:text="@string/sign_in"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:textColor="#36E30B"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="@+id/account"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/account"
        app:layout_constraintRight_toRightOf="@+id/sign_up"
        app:layout_constraintTop_toTopOf="@+id/account"
        tools:text="Sign in" />


</android.support.constraint.ConstraintLayout>
